<div class="border">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Ramal</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (salaView is not null)
            {
                var salas = salaView.SalasDto;

                if (salas is not null)
                {
                    @foreach (var sala in salas)
                    {
                        <tr>
                            <td>@sala.Id</td>
                            <td>@sala.Nome</td>
                            <td>@sala.Ramal</td>
                            <td>@sala.Descricao</td>
                            <td>
                                <a href="#">Editar</a> |
                                <a href="#">Excluir</a>
                            </td>
                        </tr>
                    }
                }

            }

        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public SalaView? salaView { get; set; }
}